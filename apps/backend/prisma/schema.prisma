// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // We are using MySQL
  url      = env("DATABASE_URL") // The connection string is loaded from the .env file
}

// User model for authentication
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  movies    Movie[] // A user can have many movies
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Movie model for our main application data
model Movie {
  id        Int      @id @default(autoincrement())
  title     String
  type      String // "Movie" or "TV Show"
  director  String
  budget    String?
  location  String?
  duration  String?
  year      String
  poster    String? // Path to the uploaded image file
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to the User model
  user   User @relation(fields: [userId], references: [id])
  userId Int
// 2. Add this index to make these fields searchable
  @@fulltext([title, director, type,year])
}